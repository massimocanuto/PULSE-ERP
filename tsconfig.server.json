{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "outDir": "./dist",
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "skipLibCheck": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "server/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}