  "scripts": {
    "dev:client": "vite dev --port 5000",
    "dev": "cross-env NODE_ENV=development tsx --watch server/index.ts",
    "build": "tsx script/build.ts",
    "build:web": "tsx script/build-web.ts",
    "build:desktop": "tsx script/build-desktop.ts",
    "start": "cross-env NODE_ENV=production node dist/index.cjs",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5000 && cross-env NODE_ENV=development electron desktop/main.cjs\"",
    "electron:build": "npm run build:desktop && electron-builder",
    "electron:package": "npm run build:desktop && electron-builder --dir",
    "dist:desktop": "npm run electron:build"
  },
