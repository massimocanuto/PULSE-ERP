  "build": {
    "appId": "com.pulse.erp",
    "productName": "PULSE ERP",
    "directories": {
      "output": "dist-desktop"
    },
    "npmRebuild": true,
    "files": [
      "desktop/**/*",
      "dist/**/*",
      "migrations/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "client/public/icon.png",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
